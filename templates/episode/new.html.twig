{% extends 'base.html.twig' %}

{% block title %}Episode - Nouveau{% endblock %}

{% block body %}
    <h1 class="custom-title">Ajouter une nouvelle saison</h1>
    {{ form_start(form, {'method': 'POST'}) }}
    <div class="row mb-3" style="color:#37392E">
        <h3 class="text-center">{{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label '}}) }}</h3>
        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'style': 'max-width:28rem; margin:auto'}}) }}
    </div>
    <div class="row mb-3">
        <h3 class="text-center">{{ form_label(form.number, 'Numéro', {'label_attr': {'class': 'form-label '}}) }}</h3>
        {{ form_widget(form.number, {'attr': {'class': 'form-control', 'style': 'max-width:28rem; margin:auto'}}) }}
    </div>
    <div class="row mb-3">
        <h3 class="text-center">{{ form_label(form.synopsis, 'Synopsis', {'label_attr': {'class': 'form-label '}}) }}</h3>
        {{ form_widget(form.synopsis, {'attr': {'class': 'form-control dark', 'style': 'max-width:28rem; margin:auto'}}) }}
    </div>
    <div class="row mb-3">
        <h3 class="text-center">{{ form_label(form.season, 'Saison de l\'épisode', {'label_attr': {'class': 'form-label '}}) }}</h3>
        {{ form_widget(form.season, {'attr': {'class': 'form-control', 'style': 'max-width:28rem; margin:auto'}}) }}
    </div>
    <input class="btn custom-btn-dark mb-3" type="submit"  value="Ajouter un épisode">
    {{ form_end(form) }}
    <a href="{{ path('episode_index') }}">back to list</a>
{% endblock %}
