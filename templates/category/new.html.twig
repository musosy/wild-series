{% extends "base.html.twig" %}

{% block body %}
<div class="form text-center p-5">
    {{ form_start(form, {'method': 'POST'}) }}
    <div class="row">
        <h3>{{ form_label(form.name, 'Nom de la nouvelle catégorie', {'label_attr': {'class': 'form-label light'}}) }}</h3>
        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'style': 'max-width:28rem; margin:auto'}}) }}
    </div>
    <input class="btn btn-primary custom-btn mt-3" type="submit" value="Ajouter une catégorie">
    {{ form_end(form) }}
</div>
{% endblock %}