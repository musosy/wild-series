{% extends "base.html.twig" %}
{% block title %}
Categories
{% endblock %}
{% block body %}
<h1 class="custom-title big text-center mb-5">Toutes les catégorie proposées : </h1>
<div class="d-flex justify-content-evenly flex-wrap">

    {% for category in categories %}
    {% include "category/_category.html.twig" %}
    {% else %}
    Aucune catégorie trouvée.
    {% endfor %}
</div>
<div class="d-flex justify-content-evenly">
    <a class="btn custom-btn-dark" href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
    {% if app.user and "ROLE_ADMIN" in app.user.roles %}
    <a class="btn custom-btn-dark" href="{{ path('category_new') }}">
        Ajouter une catégorie
    </a>
    {% endif %}
</div>
    
{% endblock %}
