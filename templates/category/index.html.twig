{% extends "base.html.twig" %}
{% block title %}
Categories
{% endblock %}
{% block body %}
<h1 class="custom-title big text-center mb-5">Toutes les catégorie proposées : </h1>
<div class="d-flex justify-content-evenly flex-wrap">

    {% for category in categories %}
    {% include "category/_category.html.twig" %}
    {% else %}
    Aucune catégorie trouvée.
    {% endfor %}
</div>
<div class="row mt-5">
    <div class="col-2"></div>
    <a class="col-3 btn custom-btn-dark" href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
    <div class="col-2"></div>
    <a class="col-3 btn custom-btn-dark" href="{{ path('category_new') }}">
        Ajouter une catégorie
    </a>
    <div class="col-2"></div>
</div>
    
{% endblock %}
