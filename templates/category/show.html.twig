{% extends "base.html.twig" %}
{% block title %}
{{ category.name }}
{% endblock %}
{% block body %}
<h1>Toutes les séries de la catégory {{ category.name }} : </h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }}</h2>
            <p>{{ program.summary }}</p>
            <a href="{{ path('program_show', {id: program.id}) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a href="{{ path('category_index') }}">
        Retour à la liste des catégories
    </a>
{% endblock %}