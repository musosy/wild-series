{% extends 'base.html.twig' %}

{% block title %}Saison - Modifier{% endblock %}

{% block body %}
    <h1 class="custom-title text-center mb-5">Modifier une saison</h1>
    {{ form_start(form, {'method': 'POST'}) }}
    <div class="row mb-3">
        <h3 class="text-center">{{ form_label(form.number, 'Numéro de la saison', {'label_attr': {'class': 'form-label '}}) }}</h3>
        {{ form_widget(form.number, {'attr': {'class': 'form-control', 'style': 'max-width:28rem; margin:auto', 'min': '1'}}) }}
    </div>
    <div class="row mb-3">
        <h3 class="text-center">{{ form_label(form.year, 'Année', {'label_attr': {'class': 'form-label '}}) }}</h3>
        {{ form_widget(form.year, {'attr': {'class': 'form-control', 'style': 'max-width:28rem; margin:auto', 'min': '1900'}}) }}
    </div>
    <div class="row mb-3 dark">
        <h3 class="text-center">{{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label '}}) }}</h3>
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'style': 'max-width:28rem; margin:auto'}}) }}
    </div>
    <div class="row mb-3 dark">
        <h3 class="text-center">{{ form_label(form.program, 'Programme de la saison', {'label_attr': {'class': 'form-label '}}) }}</h3>
        {{ form_widget(form.program, {'attr': {'class': 'form-control', 'style': 'max-width:28rem; margin:auto'}}) }}
    </div>
    <input class="btn custom-btn-dark mb-3" type="submit"  value="Modifier la saison">
    {{ form_end(form) }}
    <a href="{{ path('season_index') }}">back to list</a>
{% endblock %}
