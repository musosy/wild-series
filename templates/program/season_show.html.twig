{% extends "base.html.twig" %}
{% block title %}
{{program.title}} - Saison {{season.number}}
{% endblock %}
{% block body %}
<div class="media text-center">
    <div class="card" style="max-width:48rem; margin: auto">
        <h1 class="light">{{program.title}}</h1>
        <h3 class="light">Saison {{season.number}}</h3>
        <p class="light">{{ season.description }}</p>
    </div>
    <div class="d-flex justify-content-evenly flex-wrap">
        {% for episode in episodes %}
        {% include "program/_episode.html.twig" %}
        {% endfor %}
    </div>
</div>
<a href="{{ path('program_show', {program: program.id}) }}">
    Retour à la fiche de la série
</a>
{% endblock %}

