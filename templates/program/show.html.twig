{% extends "base.html.twig" %}
{% block title %}
{{ program.title }}
{% endblock %}
{% block body %}
<div class="container-fluid">
  <div class="card-program-large">
    <div>
      <img class="card-program-large-img" src="{{program.poster}}" alt="{{ program.title }} poster">
    </div>
    <div class="mt-2">
      <h1 class="custom-title-dark medium text-center">{{ program.title }}</h1>
      <p class="ms-3 x-small mt-3">{{ program.summary }}</p>
      <h3 class="text-center mt-2">Saisons</h3>
      <div class="d-flex justify-content-evenly flex-wrap">
        {% for season in program.seasons %}
        {% include "program/_season.html.twig" %}
        {% else %}
        Aucune saison trouvée ...
        {% endfor %}
      </div>
      <h3 class="text-center mt-2">Acteurs</h3>
      <div class="d-flex justify-content-evenly flex-wrap">
        {% for actor in program.actors %}
        <a class="btn custom-btn-dark" href="{{ path('actor_show', {actor: actor.id}) }}">{{ actor.name }}</a>
        {% else %}
        Aucun acteur trouvé ...
        {% endfor %}
      </div>
    </div>
  </div>
  {% if app.user and (is_granted("ROLE_ADMIN") or is_granted("ROLE_CONTRIBUTOR")) %}
  <a href="{{ path('program_program_edit', {program: program.slug}) }}" class="my-2 mx-3 btn custom-btn-dark">Modifier le programme</a>  
  {% endif %}
  <h1 class="custom-title-sec medium text-center mt-5 mb-2">Other related programs</h1>
  <div class="d-flex justify-content-evenly flex-wrap">

    {% for otherPrg in program.category.programs|filter(prg => prg != program)|slice(0, 3) %}
    {% set program = otherPrg %}
    {% include "program/_program.html.twig" %}
    {% endfor %}
  </div>
    
</div>
</div>
<a href="{{ path('program_index') }}">
    Retour à la liste des programmes
</a>
{% endblock %}