<div class="mx-3 comment-card rounded">
    <div id="rate">
        {% for i in 1..5 %}
        {% if i <= comment.rate %}
        <span class="fa fa-star" style="color: yellow"></span>
        {% else %}
        <span class="fa fa-star"></span>
        {% endif %}
        {% endfor %}
    </div>
    <div id="comment">{{ comment.comment }}</div>
    <div class="d-flex justify-content-evenly mt-2">
        {% if is_granted("ROLE_ADMIN") or (is_granted("ROLE_CONTRIBUTOR") and comment.user == app.user) %}
        <a class="btn custom-btn-dark" href="{{ path('program_comment_edit', {program: program.slug, season: season.id, episode: episode.slug, comment: comment.id}) }}">Modifier</a>
        <form method="post" action="{{ path('program_comment_delete', {program: program.slug, season: season.id, episode: episode.slug, comment: comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
            <button class="btn custom-btn-dark">Supprimer</button>
        </form>
        {% endif %}
    </div>
</div>