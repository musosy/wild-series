{% extends "base.html.twig" %}
{% block title %}
Programme - Nouveau
{% endblock %}
{% block body %}
<div class="form text-center p-5">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'method': 'POST'}}) }}
    <div class="row">
        <h3>Titre de la série</h3>
        <div class="text-start">{{ form_errors(form.title) }}</div>
        <div>{{ form_widget(form.title)}}</div>
    </div>
    <div class="row mt-3">
        <h3>Résumé</h3>
        <div class="text-start">{{ form_errors(form.summary) }}</div>
        <div>{{ form_widget(form.summary) }}</div>
    </div>
    <div class="row mt-3">
        <h3>Affiche</h3>
        <div class="text-start">{{ form_errors(form.poster) }}</div>
        <div>{{ form_widget(form.poster) }}</div>
    </div>
    <div class="row mt-3">
        <h3>Catégorie</h3>
        <div class="text-start">{{ form_errors(form.category) }}</div>
        <div>{{ form_widget(form.category) }}</div>
    </div>
    <div class="row mt-3">
        <h3>Acteurs</h3>
        <div class="text-start">{{ form_errors(form.actors) }}</div>
        <div>{{ form_widget(form.actors) }}</div>
    </div>
    <input class="btn custom-btn-dark mt-3" type="submit" value="Ajouter un program">
    {{ form_end(form) }}
</div>
{% endblock %}